<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
              
    <LinearLayout
    android:id="@+id/LinearLayoutFooter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/ButtonPhotoGallery"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="10dp"
        android:text="@string/photoButtonLabel" />

    <Button
        android:id="@+id/ButtonNews"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/newsActivityLabel"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp" />

    <Button
        android:id="@+id/ButtonAboutUs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/aboutUsButtonLabel" />

</LinearLayout>

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/aboutUsActivityLabel"
    />

<ImageView
    android:id="@+id/LogoView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/logo" >
</ImageView>
<TextView android:text="@+id/AboutUsText" android:id="@+id/AboutUsText" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>



